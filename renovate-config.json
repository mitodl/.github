{
  "extends": [
    ":automergeMinor",
    ":rebaseStalePrs",
    ":separateMajorReleases",
    "config:base"
  ],
  "schedule": [
    "every weekend"
  ],
  "timezone": "US/Eastern",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "all non-major dev-dependencies",
      "groupSlug": "all-minor-dev-patch",
      "matchPackagePatterns": [
        "*"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
