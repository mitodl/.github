{
  "assigneesFromCodeOwners": true,
  "configMigration": true,
  "extends": [
    ":automergeMinor",
    ":pinDevDependencies",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    ":separateMajorReleases",
    "config:recommended",
    "helpers:pinGitHubActionDigests"
  ],
  "schedule": [
    "every weekend"
  ],
  "timezone": "US/Eastern",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile"
      ],
      "matchFileNames": [
        "Earthfile",
        "*.Dockerfile",
        "Dockerfile.*",
        "*.dockerfile"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "automerge": false
    },
    {
      "groupName": "all non-major dev-dependencies",
      "groupSlug": "all-minor-dev-patch",
      "matchPackagePatterns": [
        "*"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "matchSourceUrlPrefixes": [
        "https://github.com/ckeditor/ckeditor5/"
      ],
      "groupName": "ckeditor5"
    },
    {
      "matchPackageNames": [
        "xmlsec"
      ],
      "allowedVersions": "!/1\\.3\\.14/",
      "automerge": false
    },
    {
      "matchPackageNames": [
        "python"
      ],
      "automerge": false
    }
  ],
  "pip-compile": {
    "fileMatch": [
      "(^|/).*?requirements.*?\\.txt$"
    ]
  }
}
