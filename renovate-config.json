{
  "assigneesFromCodeOwners": true,
  "extends": [
    ":automergeMinor",
    ":rebaseStalePrs",
    ":separateMajorReleases",
    "config:best-practices"
  ],
  "schedule": [
    "every weekend"
  ],
  "timezone": "US/Eastern",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile"
      ],
      "matchFileNamesO": [
        "Earthfile",
        "*.Dockerfile",
        "Dockerfile.*",
        "*.dockerfile"
      ]
    },
    {
      "groupName": "all non-major dev-dependencies",
      "groupSlug": "all-minor-dev-patch",
      "matchPackagePatterns": [
        "*"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "pip-compile": {
    "fileMatch": [
      "(^|/).*?requirements.*?\\.in$"
    ]
  }
}
